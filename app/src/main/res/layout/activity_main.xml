<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Layout1"
    tools:context="com.example.android.karatecounter.MainActivity">

    <ScrollView style="@style/Layout2">

        <RelativeLayout style="@style/Layout2">

            <LinearLayout
                android:id="@+id/layout"
                style="@style/Layout3">


                <LinearLayout style="@style/Layout4">

                    <TextView
                        style="@style/Team"
                        android:text="@string/Red"
                        android:textColor="@color/colorAccent" />

                    <TextView
                        android:id="@+id/team_a_score"
                        style="@style/Score" />


                    <br.com.bloder.magic.view.MagicButton
                        android:id="@+id/threebutton"
                        style="@style/MagicButton"
                        app:button_icon="@drawable/three"
                        app:hide_text="@string/IPPON" />

                    <br.com.bloder.magic.view.MagicButton
                        android:id="@+id/twobutton"
                        style="@style/MagicButton"
                        app:button_icon="@drawable/two"
                        app:hide_text="@string/WAZAARI" />

                    <br.com.bloder.magic.view.MagicButton
                        android:id="@+id/onebutton"
                        style="@style/MagicButton"
                        app:button_icon="@drawable/one"
                        app:hide_text="@string/YUKO" />


                    <TextView
                        android:id="@+id/team_a_warning"
                        style="@style/Score" />

                    <br.com.bloder.magic.view.MagicButton
                        android:id="@+id/warninga"
                        style="@style/MagicButton"
                        app:button_icon="@drawable/w"
                        app:hide_text="@string/WARNING" />


                </LinearLayout>

                <View style="@style/View">

                </View>


                <LinearLayout style="@style/Layout4">

                    <TextView
                        style="@style/Team"
                        android:text="@string/Blue"
                        android:textColor="@color/colorPrimaryDark" />

                    <TextView
                        android:id="@+id/team_b_score"
                        style="@style/Score" />

                    <br.com.bloder.magic.view.MagicButton
                        android:id="@+id/threebuttonb"
                        style="@style/MagicButton"
                        app:button_icon="@drawable/three"
                        app:hide_text="@string/IPPON" />


                    <br.com.bloder.magic.view.MagicButton
                        android:id="@+id/twobuttonb"
                        style="@style/MagicButton"
                        app:button_icon="@drawable/two"
                        app:hide_text="@string/WAZAARI" />

                    <br.com.bloder.magic.view.MagicButton
                        android:id="@+id/onebuttonb"
                        style="@style/MagicButton"
                        app:button_icon="@drawable/one"
                        app:hide_text="@string/YUKO" />

                    <TextView
                        android:id="@+id/team_b_warning"
                        style="@style/Score" />

                    <br.com.bloder.magic.view.MagicButton
                        android:id="@+id/warningb"
                        style="@style/MagicButton"
                        app:button_icon="@drawable/w"
                        app:hide_text="@string/WARNING" />

                </LinearLayout>

            </LinearLayout>


            <Button
                android:id="@+id/reset"
                style="@style/ResetButton" />


        </RelativeLayout>
    </ScrollView>

</RelativeLayout>



